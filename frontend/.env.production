# Production Environment Variables
# Used during Docker build (npm run build)

# API Configuration
# Empty string means requests go to relative paths (nginx proxy)
VITE_API_URL=

# Telegram Bot Configuration
VITE_BOT_USERNAME=avito_tasker_bot
VITE_APP_SHORT_NAME=avitotasker

# Support URL
VITE_SUPPORT_URL=https://t.me/support

# Mock Data (always false in production)
VITE_USE_MOCK_DATA=false
